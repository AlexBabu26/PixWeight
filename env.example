DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# LLM Provider: "openrouter" or "groq"
LLM_PROVIDER=groq

# OpenRouter settings (only needed if LLM_PROVIDER=openrouter)
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_VISION_MODEL=qwen/qwen2.5-vl-32b-instruct
OPENROUTER_TEXT_MODEL=openai/gpt-4o-mini
OPENROUTER_APP_REFERER=http://localhost:8000
OPENROUTER_APP_TITLE=Weight Estimator

# Groq settings (only needed if LLM_PROVIDER=groq)
# Get API key from https://console.groq.com
# Free tier available with generous limits
GROQ_API_KEY=gsk-...
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
GROQ_TEXT_MODEL=llama-3.3-70b-versatile

# Upload limit (bytes). Example: 5MB
MAX_UPLOAD_BYTES=5242880
